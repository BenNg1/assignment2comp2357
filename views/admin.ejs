<%- include("templates/header") %>
<head>
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="..." crossorigin="anonymous">
    
    <style>
        body {
            font-size: 18px;
        }

        .full-width-container {
            width: 80%;
        }

        .table-centered {
            text-align: center;
        }

        .table-centered th,
        .table-centered td {
            text-align: center;
            vertical-align: middle;
        }

        .table-centered thead tr {
            border-bottom: 4px double blue;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <h1 style="text-align: center">Welcome, <%= name %>!</h1> <br> 
    </div>
    <div class="container-fluid">
        <h2 style="text-align: center; padding-bottom: 40px;"> Admin Dashboard</h2> <br>
    </div>
    <div class="container-fluid full-width-container">
        <table class="table table-hover table-centered">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">User Type</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.user_type %></td>
                    <td>
                      <form class="d-inline-block" method="POST" action="/promote/<%= user.name %>">
                        <input type="hidden" name="userId" value="<%= user._id %>" />
                        <input type="hidden" name="action" value="promote" />
                        <button class="btn btn-danger rounded-pill px-3" type="submit" style="margin-left: 12px">Promote to Admin</button>
                    </form>
                    <form class="d-inline-block" method="POST" action="/demote/<%= user.name %>">
                        <input type="hidden" name="userId" value="<%= user._id %>" />
                        <input type="hidden" name="action" value="demote" />
                        <button class="btn btn-success rounded-pill px-3" type="submit">Demote to User</button>
                    </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>

<%- include("templates/footer") %>
