<%- include("templates/header") %>
<body>
        <h2 style="text-align: center; padding-bottom: 40px;"> Admin Dashboard</h2> <br>
    </div>
    <div class="container-fluid full-width-container">
        <table class="table table-hover table-centered">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">User Type</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.user_type %></td>
                    <td>
                      <form class="d-inline-block" method="POST" action="/promote/<%= user.name %>">
                        <input type="hidden" name="userId" value="<%= user._id %>" />
                        <input type="hidden" name="action" value="promote" />
                        <button class="btn btn-danger rounded-pill px-3" type="submit" style="margin-left: 12px">Promote to Admin</button>
                    </form>
                    <form class="d-inline-block" method="POST" action="/demote/<%= user.name %>">
                        <input type="hidden" name="userId" value="<%= user._id %>" />
                        <input type="hidden" name="action" value="demote" />
                        <button class="btn btn-success rounded-pill px-3" type="submit">Demote to User</button>
                    </form>
                    
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>

<%- include("templates/footer") %>